{
  "name": "valkey-glidejs-mcp",
  "version": "0.8.0",
  "type": "module",
  "description": "Universal MCP Tool Enhancement System for Valkey Glide Node.js - Intelligent, conversational interface with progressive learning, migration assistance, and production-ready code generation",
  "keywords": [
    "valkey-glide",
    "valkey client",
    "mcp",
    "model-context-protocol",
    "valkey",
    "glide",
    "redis",
    "migration",
    "code-generation",
    "ai-assistant",
    "AI-agent",
    "valkey-glide-mcp",
    "universal-tool-enhancement",
    "conversational-interface",
    "progressive-learning",
    "intelligent-suggestions",
    "production-ready",
    "context-persistence",
    "smart-migration",
    "performance-optimization"
  ],
  "homepage": "https://github.com/avifenesh/valkey-glidejs-mcp#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/avifenesh/valkey-glidejs-mcp.git",
    "directory": "valkey-glidejs-mcp"
  },
  "bugs": {
    "url": "https://github.com/avifenesh/valkey-glidejs-mcp/issues"
  },
  "author": "avifenesh",
  "license": "MIT",
  "main": "dist/server.js",
  "bin": {
    "valkey-glidejs-mcp": "./start-server.mjs"
  },
  "files": [
    "dist/**/*",
    "start-server.mjs",
    "README.md",
    "package.json",
    "mcp.json"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "npx tsx src/server.ts",
    "start": "npx tsx src/server.ts",
    "test": "npm run typecheck && npm run lint:check && npm run validate:glide && npm run test:integration",
    "test:integration": "npx tsx scripts/verify-integration.ts",
    "lint:check": "prettier --check .",
    "lint:fix": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run typecheck && npm run lint:check && npm run test:integration",
    "validate:glide": "npx tsx scripts/validate.ts",
    "validate:coverage": "npx tsx scripts/validate-api-coverage.ts",
    "extract:apis": "npx tsx scripts/extract-all-apis.ts",
    "validate:glide:extended": "npm run extract:apis && npx tsx scripts/validate-glide-parameters.ts",
    "ingest:commands": "npx tsx scripts/ingest-commands.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.1.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "24.3.0",
    "@valkey/valkey-glide": "^2.0.1",
    "prettier": "^3.3.3",
    "tsx": "^4.19.2",
    "typescript": "^5.9.2"
  }
}
