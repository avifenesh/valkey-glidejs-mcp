{
  "name": "valkey-glidejs-mcp",
  "version": "0.7.0",
  "type": "module",
  "description": "Model Context Protocol (MCP) server for Valkey Glide Node.js migration, API mapping, and use-case generation",
  "keywords": [
    "valkey-glide",
    "valkey client",
    "mcp",
    "model-context-protocol",
    "valkey",
    "glide",
    "redis",
    "migration",
    "code-generation",
    "ai-assistant",
    "AI-agent",
    "valkey-glide-mcp"
  ],
  "homepage": "https://github.com/avifenesh/valkey-glidejs-mcp#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/avifenesh/valkey-glidejs-mcp.git",
    "directory": "valkey-glidejs-mcp"
  },
  "bugs": {
    "url": "https://github.com/avifenesh/valkey-glidejs-mcp/issues"
  },
  "author": "avifenesh",
  "license": "MIT",
  "main": "src/server.ts",
  "bin": {
    "valkey-glidejs-mcp": "./start-server.mjs"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "package.json"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "echo 'Using tsx directly - no build needed'",
    "dev": "npx tsx src/server.ts",
    "start": "npx tsx src/server.ts",
    "test": "npm run typecheck && npm run lint:check && npm run validate:glide",
    "lint:check": "prettier --check .",
    "lint:fix": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run typecheck && npm run lint:check",
    "validate:glide": "npx tsx scripts/validate.ts",
    "ingest:commands": "npx tsx scripts/ingest-commands.ts",
    "commitlint": "commitlint --edit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.1.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "24.3.0",
    "@valkey/valkey-glide": "^2.0.1",
    "prettier": "^3.3.3",
    "tsx": "^4.19.2",
    "typescript": "^5.9.2"
  }
}
